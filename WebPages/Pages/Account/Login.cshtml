@page
@using Microsoft.AspNetCore.Authentication
@using Microsoft.AspNetCore.Http
@model WebPages.Pages.Account.LoginModel


<div class="container">

    <form method="post">

        <div class="form-group">
            <input type="text" class="form-control" placeholder="UserName" asp-for="UserName">
        </div>

        <div class="form-group">
            <input type="password" class="form-control" placeholder="Pass" asp-for="Password">
        </div>

        <button type="submit" class="btn btn-primary">Login</button>
        
        <partial name="_ExternalLogin.cshtml"/>
        

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    </form>
</div>
